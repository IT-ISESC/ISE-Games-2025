<header class="border-b-2 border-[#012D48] bg-[#D9CDAF] p-6.25">
	<div class="flex w-full items-center justify-between">
		<img
			class="order-1 h-[50px] w-[50px] rounded-full"
			src="../images/shared/isesc_logo.png"
			alt="ISESC Logo"
		/>
		<h1 class="order-1 text-3xl text-[#012D48]">ISE Games</h1>
		<div class="relative order-3">
			<button
				id="menuButton"
				class="flex h-[50px] w-[50px] items-center justify-center focus:outline-none"
			>
				<div class="hamburger-menu">
					<span class="bar1"></span>
					<span class="bar2"></span>
					<span class="bar3"></span>
				</div>
			</button>
		</div>
	</div>
</header>

<!-- Side menu overlay -->
<div id="menuOverlay" class="fixed inset-0 z-40 hidden bg-black/50"></div>

<!-- Side menu -->
<div
	id="sideMenu"
	class="fixed top-0 right-0 z-50 h-full w-64 translate-x-full transform bg-[#F2E8CF] transition-transform duration-300 ease-in-out"
>
	<div class="flex justify-end p-4">
		<button id="closeMenuButton" class="text-2xl font-bold text-[#012D48]"
			>3 &times;
		</button>
	</div>
	<div class="py-4">
		<a
			href="/"
			class="block px-6 py-3 text-lg text-[#012D48] hover:bg-[#D9CDAF]"
			>Home</a
		>
		<a
			href="/scoreboard"
			class="block px-6 py-3 text-lg text-[#012D48] hover:bg-[#D9CDAF]"
			>Scoreboard</a
		>
		<a
			href="/schedule"
			class="block px-6 py-3 text-lg text-[#012D48] hover:bg-[#D9CDAF]"
			>Schedule</a
		>
		<a
			href="/betting"
			class="block px-6 py-3 text-lg text-[#012D48] hover:bg-[#D9CDAF]"
			>Betting</a
		>
	</div>
</div>

<style>
	/* Hamburger menu styles */
	.hamburger-menu {
		position: relative;
		width: 30px;
		height: 20px;
	}

	.hamburger-menu span {
		display: block;
		position: absolute;
		height: 3px;
		width: 100%;
		background: #012d48;
		border-radius: 3px;
		opacity: 1;
		left: 0;
		transform: rotate(0deg);
		transition: 0.25s ease-in-out;
	}

	.hamburger-menu .bar1 {
		top: 0px;
	}

	.hamburger-menu .bar2 {
		top: 8px;
	}

	.hamburger-menu .bar3 {
		top: 16px;
	}

	/* X transformation - not needed for side menu with X button */
	.hamburger-menu.open .bar1 {
		top: 8px;
		transform: rotate(45deg);
	}

	.hamburger-menu.open .bar2 {
		opacity: 0;
	}

	.hamburger-menu.open .bar3 {
		top: 8px;
		transform: rotate(-45deg);
	}

	/* Side menu animations */
	body.menu-open {
		overflow: hidden;
	}
</style>

<script>
	// Open side menu
	document
		.getElementById('menuButton')
		.addEventListener('click', function () {
			const sideMenu = document.getElementById('sideMenu')
			const menuOverlay = document.getElementById('menuOverlay')

			sideMenu.classList.remove('translate-x-full')
			menuOverlay.classList.remove('hidden')
			document.body.classList.add('menu-open')

			// Optional: animate hamburger to X
			const hamburgerMenu = document.querySelector('.hamburger-menu')
			hamburgerMenu.classList.add('open')
		})

	// Close side menu (X button)
	document
		.getElementById('closeMenuButton')
		.addEventListener('click', closeMenu)

	// Close side menu (overlay click)
	document.getElementById('menuOverlay').addEventListener('click', closeMenu)

	function closeMenu() {
		const sideMenu = document.getElementById('sideMenu')
		const menuOverlay = document.getElementById('menuOverlay')

		sideMenu.classList.add('translate-x-full')
		menuOverlay.classList.add('hidden')
		document.body.classList.remove('menu-open')

		// Optional: animate X back to hamburger
		const hamburgerMenu = document.querySelector('.hamburger-menu')
		hamburgerMenu.classList.remove('open')
	}

	// Close menu when clicking a menu item (optional)
	const menuLinks = document.querySelectorAll('#sideMenu a')
	menuLinks.forEach((link) => {
		link.addEventListener('click', closeMenu)
	})
</script>
