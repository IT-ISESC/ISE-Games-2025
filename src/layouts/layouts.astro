---
import '../styles/global.css'
import Header from '../components/shared/header.astro'
import Footer from '../components/shared/footer.astro'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<!-- Add favicon for ise game -->
		<!-- <link rel="icon" type="image/webp" href="/favicon-vlvu.webp" /> -->
		<meta name="generator" content="Astro" />
		<meta
			name="viewport"
			content="width = device-width, initial-scale = 1.0"
		/>
		<title>ISE Game 2025</title>
	</head>
	<body class="font-libre">
		<main class="mobile pb-14">
			<Header />
			<slot />
			<Footer />
		</main>
	</body>
</html>

<style>
	.mobile {
		display: relative;
		max-width: 448px;
		margin: 0 auto;
		min-height: 100vh;
		height: auto;
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
		background-color: #f2e8cf;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
