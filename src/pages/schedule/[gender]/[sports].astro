---
import Layouts from '../../../layouts/layouts.astro'
import SportsSelector from '../../../components/schedule/sports_selector.astro'
import ScheduleHeader from '../../../components/schedule/schedule_header.astro'
import ScheduleTable from '../../../components/schedule/schedule_table.astro'

// Dynamic Routes
export function getStaticPaths() {
	// Define possible paths
	const genders = ['male', 'female', 'mixed']
	const sports = [
		'futsal',
		'basketball',
		'chairball',
		'badminton',
		'rov',
		'valorant',
	]
	const paths = []
	for (const gender of genders) {
		for (const sport of sports) {
			paths.push({ params: { gender, sports: sport } })
		}
	}
	return paths
}

// Use the gender and sports name to do other things
const { gender, sports } = Astro.params
const sportName = sports.charAt(0).toUpperCase() + sports.slice(1)
const imagePath = `/images/schedule/sports_logo/${sports.toLowerCase()}.png`

// Construct the combination key
var combinationKey = `${sports}_${gender}`
if (combinationKey === 'chairball_male') {
	combinationKey = 'chairball_female'
}

// Dynamically import the sport data based on the gender and sport
const matchData = await import(`../../../utils/variables.js`).then((module) => {
	return module[combinationKey] // Example: 'basketball_male'
})
---

<Layouts>
	<SportsSelector />
	<ScheduleHeader image={imagePath} title={sportName} gender={gender} />
	<ScheduleTable matchData={matchData} />
</Layouts>
